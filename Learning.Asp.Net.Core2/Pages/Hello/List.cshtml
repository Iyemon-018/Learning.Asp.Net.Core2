@model IEnumerable<Learning.Asp.Net.Core2.Domain.Entities.Book>
@{
    ViewData["Title"] = "List";
}
<h2>List</h2>
<table class="table">
    <thead>
    <tr>
        <th>書名</th>
        <th>価格</th>
        <th>出版社</th>
        <th>配布サンプル</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Price</td>
                <td>@book.Publisher</td>
                <td>@book.Sample</td>
            </tr>
        }
    </tbody>
</table>
