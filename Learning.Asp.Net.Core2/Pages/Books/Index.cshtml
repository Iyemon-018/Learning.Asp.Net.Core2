            <th>@Html.DisplayNameFor(model => model.Books[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Books[0].Publisher)</th>
